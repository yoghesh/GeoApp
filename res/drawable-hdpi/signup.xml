<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">

       <layer-list >
           <item android:left="5dp" android:top="5dp">
               <shape >
                   <corners android:radius="5dp"/>
                   <solid android:color="#ff2d00"/>
                    <stroke android:width="2dp"
                       android:color="#fb9800"/>
               </shape>
           </item>
           
           <item android:right="5dp" android:bottom="5dp">
               <shape >
                   <corners android:radius="5dp"/>
                   <gradient android:angle="45"
                       android:startColor="#ff4f00"
                       android:centerColor="#ff4f00"
                       android:endColor="#ff4f00"
                       />
                   <padding android:left="2dp" 
                       android:top="2dp"
                       android:right="2dp"
                       android:bottom="2dp"/>
                   <stroke android:width="2dp"
                       android:color="#fb9800"/>
               </shape>
           </item>
           
       </layer-list>
  
  </item>

  <item android:state_pressed="true">

        <shape>
          <gradient android:angle="270" android:endColor="#ff4f00" android:startColor="#e68585"/>
          <stroke android:width="1dp" android:color="#ff2d00"/>
          <corners android:radius="5dp"/>
        </shape>

  </item>

</selector>
